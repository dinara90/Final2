<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>News Visualization</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <h1 class="mt-5">Latest News</h1>
        <div class="row">
            <% newsData.forEach(news => { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img class="card-img-top" src="<%= news.imageUrl %>" alt="<%= news.title %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= news.title %></h5>
                            <p class="card-text"><%= news.description %></p>
                            <a href="<%= news.url %>" class="btn btn-primary" target="_blank">Read More</a>
                            <p class="card-text"><small class="text-muted">Published at <%= new Date(news.publishedAt).toLocaleDateString() %></small></p>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
</body>
</html>
